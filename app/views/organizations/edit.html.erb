<div class="container">
  <div class="row my-3">
    <div class="col-lg-3">

      <h1>organization edit</h1>

       <%= form_with model:@organization,url:organization_path(@organization.id),local:true do |f| %>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label :introduction %>
          <%= f.text_area :introduction %>
        </div>
        <div>
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
  </div>
</div>