<div class="container">
  <div class="row my-3">
    <div class="col-lg-12">

      <h1>organization edit</h1>

      <%= form_with model:@organization,url:organization_path(@organization.id),local:true do |f| %>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name, size: "60x10" %>
        </div>
        <div>
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, size: "60x10" %>
        </div>
        <div>
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
  </div>
</div>