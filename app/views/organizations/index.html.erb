<div class="container">
  <div class="row my-3">
    <div class="col-lg-12">

      <h1>my organization</h1>
      <P><%= link_to 'new organization',new_organization_path %></P>
      <table class='table'>
        <thead>
          <tr>
            <th>name</th>
            <th>owner</th>
            <th>belonging</th>
          </tr>
        </thead>
        <tbody>
          <% @user.organizations.each do |organization| %><%# ログインユーザの情報だけ取得したい %>
          <tr>
            <td><%= link_to organization.name, organization_path(organization.id) %></td>
            <td><%= link_to User.find(organization.user_id).name,user_path(@user.id) %></td>
            <td><%= link_to Belonging.where(organization_id: organization.id).count, organization_belonging_path(organization.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

