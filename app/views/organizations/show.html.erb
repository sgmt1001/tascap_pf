<div class="container">
  <div class="row my-3">
    <div class="col-lg-3">

      <h1>organization detail</h1>

      <table class='table'>
        <thead>
          <tr>
            <th>name</th>
            <th>introduction</th>
            <th>owner</th>
            <th>member</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @organization.name %></td>
            <td><%= @organization.introduction %></td>
            <td><%= @organization.user_id %></td>
            <td>メンバーカウント</td>
            <% if @organization.user_id == current_user.id %>
              <td>
                <%= link_to 'edit',edit_organization_path(@organization.id) %>
                <%= link_to 'delete',organization_path(@organization.id),method: :delete, data: { confirm: '本当に消しますか？' } %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>