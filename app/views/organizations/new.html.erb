<div class="container">
  <div class="row my-3">
    <div class="col-lg-12">

      <h1>new organization</h1>

      <div class="text-danger">
        <% if @organization.errors.any? %>
          <%= @organization.errors.count %> error has occured,
          <% @organization.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
        <% end %>
      </div>

      <%= form_with model:@organization,local:true do |f| %>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name, size: "60x10" %>
        </div>
        <div>
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, size: "60x10" %>
        </div>
        <div>
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>