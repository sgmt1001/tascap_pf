<div class="container">
  <div class="row my-3">
    <div class="col-lg-12">
      <h1>task detail</h1>

      <h3><%= @task.project.name %></h3>

      <table class='table'>
        <thead>
          <tr>
            <th>task</th>
            <th>man hour</th>
            <th>deadline</th>
            <th>status</th>
            <th>person</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @task.name %></td>
            <td><%= @task.man_hour %></td>
            <td><%= @task.deadline %></td>
            <td><%= @task.status %></td>
            <td><%= @task.user.name %></td>
          </tr>
        </tbody>
      </table>
      <br>
      <div class="font-weight-bold">detail</div>
      <div><%= @task.detail %></div>
      <br>
      <p>
        <%= link_to 'edit',edit_organization_project_task_path(@task.id) %>
        <%= link_to 'delete',organization_project_task_path(@task.id),method: :delete, data: { confirm: '本当に消しますか？' } %>
      </p>
      <p><%= link_to 'back',organization_project_path(@task.project.organization_id,@task.project_id)%></p>
    </div>
  </div>
</div>