<div class="container">
  <div class="row my-3">
    <div class="col-lg-12">
      <h1>new task</h1>

        <%= form_with model:@task,url: organization_project_tasks_path(@task.project.organization_id,@task.project_id),local:true do |f| %>
          <div>
            <%= f.label :name %><br>
            <%= f.text_field :name, size: "60x10" %>
          </div>
          <div>
            <%= f.label :detail %><br>
            <%= f.text_area :detail, size: "60x10" %>
          </div>
          <div>
            <%= f.label :'man hour' %><br>
            <%= f.text_field :man_hour, size: "10x10" %>
          </div>
          <div>
            <%= f.label :deadline %><br>
            <%= f.datetime_select :deadline %>
          </div>
          <div>
            <%= f.label :status %><br>
            <%= f.select :status, Task.statuses.keys.to_a %>
          </div>
          <div>
            <%= f.label :person %><br>
            <%= f.select :person, @users, include_blank: true %>
          </div>
          <br>
          <div>
            <%= f.submit class: 'btn btn-success' %>
          </div>
        <% end %>

    </div>
  </div>
</div>