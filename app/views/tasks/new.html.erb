<div class="container">
  <div class="row my-3">
    <div class="col-lg-3">
      <h1>new task</h1>

        <%= form_with model:@task,url:organization_projects_path,local:true do |f| %>
          <div>
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>
          <div>
            <%= f.label :detail %><br>
            <%= f.text_area :detail %>
          </div>
          <div>
            <%= f.label :'man hour' %><br>
            <%= f.text_field :man_hour %>
          </div>
          <div>
            <%= f.label :deadline %><br>
            <%= f.text_field :deadline %>
          </div>
          <div>
            <%= f.label :status %><br>
            <%= f.select :status, Task.statuses.keys.to_a, {} %>
          </div>
          <br>
          <div>
            <%= f.submit class: 'btn btn-success' %>
          </div>
        <% end %>

    </div>
  </div>
</div>