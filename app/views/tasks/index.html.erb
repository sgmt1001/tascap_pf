<div class="container">
  <div class="row my-3">
    <div class="col-lg-3">
      <h1>task index</h1>
        <p>
          <%= link_to 'new task',new_organization_project_task_path %>
        </p>

        <table class='table'>
          <thead>
            <tr>
              <th>task</th>
              <th>man hour</th>
              <th>deadline</th>
              <th>status</th>
              <th>person</th>
            </tr>
          </thead>
          <tbody>
            <% @task.each do |task| %>
            <tr>
              <td><%= task.name %></td>
              <td><%= task.man_hour %></td>
              <td><%= task.deadline %></td>
              <td><%= task.status %></td>
              <td><%= task.status %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>