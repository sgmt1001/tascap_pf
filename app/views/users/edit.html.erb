<div class="container">
  <div class="row my-3">
    <div class="col-lg-12">
      <h1>edit user</h1>

      <%= form_with model:@user,url:user_path(@user),local:true do |f| %>

        <div>
          <%= f.label :profile_image %><br>
          <%= f.attachment_field :profile_image %>
        </div>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name, size: "60x10" %>
        </div>
        <div>
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, size: "60x10" %>

        </div>
        <div>
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
  </div>
</div>