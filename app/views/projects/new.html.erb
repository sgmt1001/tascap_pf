<div class="container">
  <div class="row my-3">
    <div class="col-lg-3">
      <h1>new project</h1>

      <%= form_with model:@project,url:organization_projects_path,local:true do |f| %>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label :overview %><br>
          <%= f.text_area :overview %>
        </div>
        <div>
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
  </div>
</div>