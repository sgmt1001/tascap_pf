<div class="container">
  <div class="row my-3">
    <div class="col-lg-12">
      <h1>add user</h1>
      <h4>organization:<%= @organization.name %></h4>
      <%= form_with url: organization_belonging_search_path, method: :get, local: true do |f| %>
      <%= f.text_field :name %>
      <%= f.submit :search %>
      <% end %>
      <br>
      <table class='table'>
        <thead>
          <tr>
            <th style="width :30%">user</th>
            <th style="width :60%">introduction</th>
            <th style="width :10%"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <span><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpeg", size: '40x40') %></span>
                <span><%= user.name %></span>
              </td>
              <td><%= user.introduction %></td>
              <% if user != current_user %>
              <td><%= link_to 'invite',organization_belonging_invite_path(@organization, user_id: user.id) %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>