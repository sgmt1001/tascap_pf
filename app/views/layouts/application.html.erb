<!DOCTYPE html>
<html>
  <head>
    <title>Tascap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <div>
          <%= link_to root_path do %>
            <%= image_tag asset_path('logo_transparent.png'),:size =>'120x60' %>
          <% end %>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li><%= link_to ' about',about_path,class: 'fas fa-file-alt nav-link text-light' %>
            <li><%= link_to ' my page',user_path(current_user.id),class: 'fas fa-address-card nav-link text-light' %></li>
            <li><%= link_to ' organization',organizations_path ,class: 'fas fa-users nav-link text-light'%></li>
            <li><%= link_to ' project', user_projects_path(current_user.id) ,class: 'fas fa-project-diagram nav-link text-light'%></li>
            <li><%= link_to ' task', user_tasks_path(current_user.id) ,class: 'fas fa-tasks nav-link text-light'%></li>
            <li><%= link_to ' logout', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
          <% else %>
            <li><%= link_to ' about',about_path,class: 'fas fa-file-alt nav-link text-light' %></li>
            <li><%= link_to ' login', new_user_session_path ,class: 'fas fa-sign-in-alt nav-link text-light'%></li>
            <li><%= link_to ' sign up', new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>

    <footer class="footer navbar navbar-expand-lg navbar-dark bg-dark" >
      <div class="footer_text">
        <div class="text-white">
          Â© 2021 sgmt1001
        </div>
      </div>
    </footer>

</html>



