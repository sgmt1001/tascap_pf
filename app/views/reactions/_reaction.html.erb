<% if comment.reactioned_by?(current_user) %>
  <p>
    <%= link_to organization_project_task_comment_reactions_path(task.project.organization_id,task.project_id,task.id,comment.id), method: :delete, remote: true do %>
      ♥<%= comment.reactions.count %>
    <% end %>
  </p>
  <% else %>
  <p>
    <% if comment.user != current_user %><%# 自分のコメントにはいいねできないようにするための記述 %>
      <%= link_to organization_project_task_comment_reactions_path(task.project.organization_id,task.project_id,task.id,comment.id), method: :post, remote: true do %>
        ♡<%= comment.reactions.count %>
      <% end %>
    <% end %>
  </p>
<% end %>